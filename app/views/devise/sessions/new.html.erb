
<% if alert %>
    <p class="errors"><%= alert %></p>
<% end %>

<body>
        <div class="container1">
            <!-- Codrops top bar -->
            <div class="codrops-top">
                               
            </div><!--/ Codrops top bar -->
            <header>
               <nav class="codrops-demos"></nav>
            </header>
            <section>       
                <div id="container_demo" >
                    <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
                    <a class="hiddenanchor" id="toregister"></a>
                    <a class="hiddenanchor" id="tologin"></a>
                    <div id="wrapper">
                        <div id="login" class="animate form">
                           <%= form_for(resource, as: resource_name, url: session_path_url) do |f| %>
                                <h1>Log in</h1> 
                                <p> 
                                    <label for="username" class="uname" data-icon="u"> Your email</label>
                                    <%=f.email_field :email,:placeholder => "mymail@mail.com",:required => true,:id => "username" %>
                                </p>
                                <p> 
                                    <label for="password" class="youpasswd" data-icon="p"> Your password </label>
                                    <%=f.password_field :password ,:placeholder => 'eg. X8df!90EO',:required => true,:id => "password"%>
                                </p>
                                <p class="keeplogin"> 
                                  <input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" /> 
                                  <label for="loginkeeping">Keep me logged in</label>
                                </p>
                                                <p class="login button"> 
                                                    <%= f.submit :submit,:value => "Login"%>
                                </p>
                                                <p class="change_link" id="button-login">
                                  <a href="" class="to_register" id="site">Go to home</a>
                                </p>
                            <%end%>
                        </div>

                        
            
                    </div>
                </div>  
            </section>
        </div>
    </body>
    <script type="text/javascript">
        jQuery("#site").click(function(){
             location.href = "/"
        })
    </script>